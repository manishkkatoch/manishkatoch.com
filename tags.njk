---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: false
layout: layouts/home.njk
eleventyExcludeFromCollections: true
eleventyComputed:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag }}/
---
{% set postslist = collections[ tag ] %}
<div class="row tag-view">
<div class="col-lg-12">
    <div class="section-head">
      Tagged {{ tag }}
    </div>
  </div>
  {% for post in postslist | reverse %}
  <div class="col-lg-6 tag-post" style="margin-bottom: 2rem;">
      <div class="post-div">
        {% rI post.data.image, post.data.title, [750, 1200], "post-hero", "#" %}
        {% include "layouts/post-view.njk" %}
      </div>
  </div>
  {% endfor %}
</div>

<p>See <a href="{{ '/tags/' | url }}">all tags</a>.</p>