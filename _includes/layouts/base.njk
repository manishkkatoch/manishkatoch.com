  - /css/footer.css
links:
  - icons: fas fa-envelope-square
    title: Email
    link: mailTo:manish.katoch@gmail.com
  - icons: fab fa-linkedin
    title: LinkedIn
    link: https://www.linkedin.com/in/manishkkatoch/
  - icons: fab fa-twitter-square
