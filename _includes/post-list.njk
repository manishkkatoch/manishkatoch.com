{% set listView = postslist | length > 2 %}
{% set posts = postslist | reverse | featured %}


<section class="row">
  <div class="col-lg-12">
    <div class="section-head">
      {{ collectionTitle }}
    </div>
  </div>
  {%- if listView -%}
  <div class="col-lg-6" style="margin-bottom: 2rem;">
  {% set post = posts | first %}
    <div class="post-div">
      {% rI post.data.image, post.data.title, [750, 1200], "post-hero", post.url %}
      {% include "layouts/post-view.njk" %}
    </div>
  </div>
  <div class="col-lg-6" style="margin-bottom: 2rem;">
    <div class="row">
      {% for post in posts | shift | head(3) %}
        <div class="col-lg-12" style="margin-bottom: 2rem;">
          <div class="post-div">
            {% rI post.data.image, post.data.title, [750, 1200], "post-hero", post.url %}
            {% include "layouts/post-view.njk" %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  {%- else -%}
    {% for post in postslist | reverse %}
    <div class="col-md-6" style="margin-bottom: 2rem;">
        <div class="post-div">
          {% rI post.data.image, post.data.title, [750, 1200], "post-hero", post.url %}
          {% include "layouts/post-view.njk" %}
        </div>
    </div>
    {% endfor %}
  {%- endif -%}
  <div class="col-lg-12 d-flex section-tail">
    <a href="{{ moreLink | url }}">more similar articles <i class="fas fa-chevron-right tinted"></i></a>
  </div>
</section>