<section class="row">
  {% for post in postslist | reverse %}
  <div class="col-md-6" style="margin-bottom: 2rem;">
    <div class="post-div">
        {% for tag in post.data.tags %}
        {%- if collections.tagList.indexOf(tag) != -1 -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" class="post-tag">#{{ tag }}</a>
        {%- endif -%}
      {% endfor %}
      <a class="post-ref" href="{{ post.url | url }}">
        <img src="{{ post.data.titleImage.url | url }}" class="post-hero" />
        <h2>{{ post.data.title }}</h2>
        <p>{{ post.data.description | safe }}</p>
        <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | htmlShortDate }}</time>
      </a>
    </div>
  </div>
  {% endfor %}
</section>